  gem 'rspec-rails'
  gem 'ZenTest'
  gem 'database_cleaner'
  gem 'cucumber-rails', :require => false
  gem 'cucumber-rails-training-wheels'
  gem 'capybara'
  gem 'launchy'
  gem 'factory_girl_rails'
  gem 'simplecov', :require => false
end

gem 'jquery-rails'


